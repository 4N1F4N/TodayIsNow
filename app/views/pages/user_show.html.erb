<div style='padding: 15px 0;'>
    <%= render partial: "users/user_pattern", locals: { id: params[:id]}%>
</div>
<% user = User.find_by(id:params[:id])%>
<% if user %>
    <% posts = user.post%>
    <% posts.reverse_each do |post|%>
        <div style='padding: 15px 0;'>
            <%= render partial: "posts/post_pattern", locals: { id: post.id}%>
        </div>
    <% end %>
<% end %>
