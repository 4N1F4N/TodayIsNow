<% if User.find_by(id:session[:user_id]).can_see_closes_posts? %>
    <% @posts.each do |post| %>
      <%= render partial: "posts/post_pattern", locals: { id: post.id }%>
    <% end %>
<% else %>
    <div style='padding: 10px 0;'>
        <div class = 'card'>
            <div class='card-body'>
                <h5 class='card-title'>Недостаточно прав</h5>
            </div>
        </div>
    </div>
<% end %>