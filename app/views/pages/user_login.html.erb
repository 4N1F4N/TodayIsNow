<div class = 'card'>
    <div class='card-body'>
        <form action = '/user/login' method = 'post'>
            <h5 class='card-title'>Авторизироваться</h5>
            <input type = 'hidden' name = 'authenticity_token' value = '<%=form_authenticity_token%>'>
            <input class = 'form-control' type = 'login' name = user[login] placeholder = 'Логин'>
            <input class = 'form-control' type = 'password' name = user[password] placeholder = 'Пароль'>
            <input class = 'btn btn-primary' type = 'submit' name = 'submit' value = 'Войти'>
        </form>
    </div>
</div>
<% if flash[:alert] %>
    <%= render partial: "errors/alert", locals: { alert: flash[:alert] }%>
<% end %>